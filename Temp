    WHERE [claimID] IS NULL
    WITH (
        PAD_INDEX = OFF,
        STATISTICS_NORECOMPUTE = OFF,
        SORT_IN_TEMPDB = OFF,
        DROP_EXISTING = OFF,
        ONLINE = OFF,
        ALLOW_ROW_LOCKS = ON,
        ALLOW_PAGE_LOCKS = ON,
        FILLFACTOR = 85,  -- Lower for frequent updates
        DATA_COMPRESSION = PAGE
    );
    PRINT '  [OK] Index created: IX_Transit_ClaimNumber_NullClaimID (filtered)';
