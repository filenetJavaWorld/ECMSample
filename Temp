        COUNT(*) AS Total,
        SUM(CASE WHEN claimID IS NOT NULL THEN 1 ELSE 0 END) AS WithClaimID,
        SUM(CASE WHEN claimID IS NULL THEN 1 ELSE 0 END) AS WithoutClaimID
    FROM Wawa_Doc_Migration_Transit_Data;
    
